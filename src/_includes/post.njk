<h1>{{ title }}</h1>
<time itemprop="datePublished" datetime="{{ date }}">
  {{ page.date.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric"}) }}
</time>
&middot;
<span>{{ content | readingTime }} reading time</span>

<article>
  {{ content | safe }}
</article>
